{
  "version": 2,
  "builds": [
    {
      "src": "dist/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/v1/health",
      "dest": "dist/server.js"
    },
    {
      "src": "/api/v1/auth/(register|login)",
      "dest": "dist/server.js"
    },
    {
      "src": "/api/v1/courses",
      "methods": ["GET"],
      "dest": "dist/server.js"
    },
    {
      "src": "/api/v1/enrollments/discover",
      "methods": ["GET"],
      "dest": "dist/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "dist/server.js"
    },
    {
      "src": "/api/v1/(.*)",
      "dest": "dist/server.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept, Authorization"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 